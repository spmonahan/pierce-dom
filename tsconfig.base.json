{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "pretty": true,
    "paths": {
      "@pierce-dom/treewalker": ["packages/treewalker/src/index.ts"],
      "element-contains": ["packages/element-contains/src/index.ts"]
    },
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "exclude": ["node_modules", "tmp"]
}
